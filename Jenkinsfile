pipeline {
    agent sr_slave

    stages {
        stage('build') {
            steps {
                echo 'building the new application'
            }
        }
        stage('Deploy') {
            steps {
                echo 'deployed the new application'
            }
        }
        stage('new version0.1') {
            steps {
                echo 'updated new version 0.1'
            }
        }
    }
}
